{
	"compilerOptions": {
		"baseUrl": "./",

		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"preserveValueImports": true,
		"lib": ["esnext", "DOM", "DOM.Iterable"],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext"
	},
	"include": ["./src/**/*.js", "./src/**/*.ts", "./src/**/*.svelte"],
	"exclude": ["./node_modules/**"]
}
